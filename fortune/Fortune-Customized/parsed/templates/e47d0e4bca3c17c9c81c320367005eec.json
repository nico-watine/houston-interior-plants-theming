{"components/cart/cart-coupon-codes":"<li class=\"cart-total\">\n  {{#if cart.coupons}}\n    {{#each cart.coupons}}\n      <div class=\"cart-total-coupon\">\n        <span class=\"cart-total-label\">\n          {{lang 'cart.coupon_codes.coupon_code_label' code=code}}\n          <a class=\"coupon-code-remove\" href=\"{{remove_url}}\">({{lang 'cart.coupon_codes.remove'}})</a>\n        </span>\n        <span class=\"cart-total-value\">{{discount.formatted}}</span>\n      </div>\n    {{/each}}\n  {{/if}}\n\n  {{> components/cart/cart-coupon-input}}\n</li>\n","components/cart/cart-coupon-input":"{{inject 'addCode' (lang 'cart.coupon_codes.add_code')}}\n{{inject 'hideCoupons' (lang 'cart.coupon_codes.hide_coupons')}}\n\n<div class=\"cart-total coupon-code-wrapper\">\n  <span class=\"cart-total-label\">{{lang 'cart.coupon_codes.enter_code'}}</span>\n\n  {{#if cart.discount \">\" 0}}\n    <button class=\"cart-total-value coupon-code-toggle\" data-discount-default=\"{{cart.discount.formatted}}\">{{cart.discount.formatted}}</button>\n  {{else}}\n    <button class=\"cart-total-value coupon-code-toggle\">{{lang 'cart.coupon_codes.add_code'}}</button>\n  {{/if}}\n\n  <form class=\"coupon-code-form hidden\" method=\"post\" action=\"{{urls.cart}}\">\n    <div class=\"form-field coupon-entry-field\">\n      <label class=\"form-label\" for=\"couponcode\">\n        <span class=\"form-label-text form-hidden\">{{lang 'cart.coupon_codes.coupon_code'}}</span>\n        <input class=\"form-input\" data-error=\"{{lang 'cart.coupon_codes.empty_error'}}\" id=\"couponcode\" type=\"text\" name=\"couponcode\" value=\"\" placeholder=\"{{lang 'cart.coupon_codes.coupon_code'}}\">\n      </label>\n    </div>\n    <div class=\"form-field coupon-entry-submit\">\n      <input class=\"button button-primary button-small\" type=\"submit\" value=\"{{lang 'cart.coupon_codes.submit'}}\">\n      <input type=\"hidden\" name=\"action\" value=\"applycoupon\">\n    </div>\n  </form>\n</div>\n"}
