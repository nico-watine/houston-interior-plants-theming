{"components/faceted-search/sort-filter":"\n<div class=\"faceted-search-filter\">\n  <h3 class=\"sidebar-title\">\n    {{lang 'sidebar_filters.sort.sort_by'}}\n    <span class=\"faceted-search-toggle is-open\" data-default-visible>&ndash;</span>\n  </h3>\n\n  <form class=\"faceted-search-filter-list is-open\" method=\"get\" data-sort-by>\n    <div class=\"form-field\">\n      <label class=\"form-label\" for=\"sort\">\n        <span class=\"select-wrapper\">\n        <select class=\"form-input input-select\" name=\"sort\" id=\"sort\">\n          <option value=\"featured\" {{#if sort \"==\" \"featured\" }}selected{{/if}}>{{lang \"sidebar_filters.sort.featured\"}}</option>\n          <option value=\"newest\" {{#if sort \"==\" \"newest\" }}selected{{/if}}>{{lang \"sidebar_filters.sort.newest\"}}</option>\n          <option value=\"bestselling\" {{#if sort \"==\" \"bestselling\"}}selected{{/if}}>{{lang \"sidebar_filters.sort.top_sellers\"}}</option>\n          <option value=\"alphaasc\" {{#if sort \"==\" \"alphaasc\"}}selected{{/if}}>{{lang \"sidebar_filters.sort.alpha_asc\"}}</option>\n          <option value=\"alphadesc\" {{#if sort \"==\" \"alphadesc\"}}selected{{/if}}>{{lang \"sidebar_filters.sort.alpha_desc\"}}</option>\n          <option value=\"avgcustomerreview\" {{#if sort \"==\" \"avgcustomerreview\"}}selected{{/if}}>{{lang \"sidebar_filters.sort.rating\"}}</option>\n          <option value=\"priceasc\" {{#if sort \"==\" \"priceasc\"}}selected{{/if}}>{{lang \"sidebar_filters.sort.price_asc\"}}</option>\n          <option value=\"pricedesc\" {{#if sort \"==\" \"pricedesc\"}}selected{{/if}}>{{lang \"sidebar_filters.sort.price_desc\"}}</option>\n          {{#if result_count}}\n            <option value=\"relevance\" {{#if sort \"==\" \"relevance\"}}selected{{/if}}>{{lang \"sidebar_filters.sort.relevance\"}}</option>\n          {{/if}}\n        </select>\n        </span>\n      </label>\n    </div>\n  </form>\n</div>\n"}
