{"components/cart/gift-certificate/certificate-input":"{{inject 'invalidCertificate' (lang 'cart.gift_certificates.invalid_error')}}\n{{inject 'addCertificate' (lang 'cart.gift_certificates.add_cert_label')}}\n{{inject 'hideForm' (lang 'cart.gift_certificates.cancel')}}\n\n<div class=\"cart-total certificate-wrapper\">\n  <span class=\"cart-total-label\">{{lang 'cart.gift_certificates.title'}}</span>\n  <button class=\"cart-total-value certificate-toggle\">{{lang 'cart.gift_certificates.add_cert_label'}}</button>\n\n  <form class=\"certificate-form hidden\" method=\"post\" action=\"{{urls.cart}}\">\n    <div class=\"form-field\">\n      <label class=\"form-label\" for=\"certcode\">\n        <span class=\"form-label-text form-hidden\">{{lang 'cart.gift_certificates.add_certificate'}}</span>\n        <input class=\"form-input\" data-error=\"{{lang 'cart.gift_certificates.empty_error'}}\" id=\"certcode\" type=\"text\" name=\"certcode\" value=\"\" placeholder=\"{{lang 'cart.gift_certificates.add_certificate'}}\">\n      </label>\n    </div>\n    <div class=\"form-field certificate-submit\">\n      <input class=\"button button-primary button-small\" type=\"submit\" value=\"{{lang 'cart.coupon_codes.submit'}}\">\n      <input type=\"hidden\" name=\"action\" value=\"applycoupon\">\n    </div>\n  </form>\n</div>\n"}
