{"components/blog/blog-post":"<div>\n  {{{body}}}\n</div>\n\n<footer class=\"blog-post-footer\">\n  {{#if author}}\n    <div class=\"blog-post-author\">\n      {{author}}\n    </div>\n  {{/if}}\n\n  <div class=\"blog-post-published\">\n    {{date_published}}\n  </div>\n\n  {{#if tags.length}}\n    <div class=\"blog-post-tags\">\n      {{lang 'blog.tags'}}\n      <span>\n        {{#each tags}}\n          <a class=\"blog-post-tag\" href=\"{{url}}\">\n            {{name}}\n          </a>\n          {{#unless @last}}, {{/unless}}\n        {{/each}}\n      </span>\n    </div>\n  {{/if}}\n\n  <div class=\"blog-share\">\n    {{> components/common/share-buttons\n      add-this\n      inline-facebook-like=true\n      url=url\n      title=title\n      image=(getImage thumbnail '1200x1200')\n    }}\n  </div>\n\n</footer>\n","components/common/share-buttons":"<div class=\"sharing-buttons\">\n  {{#each buttons}}\n    {{#if service '===' 'twitter'}}\n      <a class=\"sharing-button\"\n        target=\"_blank\"\n        href=\"//twitter.com/share?url={{../../url}}\"\n        data-share-button\n        data-popup-title=\"Twitter\">\n        <i class=\"icon-twitter\"></i>\n      </a>\n    {{/if}}\n\n    {{#if service '===' 'facebook'}}\n      <a class=\"sharing-button\"\n        target=\"_blank\"\n        href=\"//www.facebook.com/sharer.php?u={{../../url}}\"\n        data-share-button\n        data-popup-title=\"Facebook\"\n        data-popup-width=\"500\"\n        data-popup-height=\"200\">\n        <i class=\"icon-facebook\"></i>\n      </a>\n    {{/if}}\n\n    {{#if service '===' 'linkedin'}}\n      <a class=\"sharing-button\"\n        target=\"_blank\"\n        href=\"//www.linkedin.com/cws/share?url={{../../url}}\"\n        data-share-button\n        data-popup-title=\"LinkedIn\"\n        data-popup-width=\"500\"\n        data-popup-height=\"200\">\n        <i class=\"icon-linkedin\"></i>\n      </a>\n    {{/if}}\n\n    {{#if service '===' 'email'}}\n      <a class=\"sharing-button\"\n        href=\"mailto:?subject={{../../title}}&amp;body={{../../url}}\">\n        <i class=\"icon-mail\"></i>\n      </a>\n    {{/if}}\n\n    {{#if service '===' 'google_plusone'}}\n      <a class=\"sharing-button\"\n        target=\"_blank\"\n        href=\"//plus.google.com/share?url={{../../url}}\"\n        data-share-button\n        data-popup-title=\"Google\">\n        <i class=\"icon-google\"></i>\n      </a>\n    {{/if}}\n\n    {{#if service '===' 'print'}}\n      <a class=\"sharing-button\"\n        href=\"javascript:;\"\n        onclick=\"window.print()\">\n        <i class=\"icon-print\"></i>\n      </a>\n    {{/if}}\n\n    {{#if service '===' 'pinterest'}}\n      {{#if ../../image}}\n        <a class=\"sharing-button\"\n          target=\"_blank\"\n          href=\"//pinterest.com/pin/create/button/?url={{../../../url}}{{#if ../../../image}}&amp;media={{../../../../image}}{{/if}}&amp;description={{../../../title}}\"\n          data-share-button\n          data-popup-title=\"Pinterest\"\n          data-popup-width=\"750\"\n          data-popup-height=\"800\">\n          <i class=\"icon-pinterest\"></i>\n        </a>\n      {{/if}}\n    {{/if}}\n  {{/each}}\n\n  {{#if inline-facebook-like}}\n    {{#each buttons}}\n      {{#if service '===' 'facebook_like'}}\n        <span class=\"sharing-button facebook-share-button\" data-facebook-like>\n          <div class=\"fb-like\"\n            data-href=\"{{../../url}}\"\n            data-layout=\"standard\"\n            data-action=\"like\"\n            data-show-faces=\"false\">\n          </div>\n        </span>\n      {{/if}}\n    {{/each}}\n  {{/if}}\n</div>\n\n{{#unless inline-facebook-like}}\n  {{#each buttons}}\n    {{#if service '===' 'facebook_like'}}\n      <div class=\"facebook-share-button-standalone\" data-facebook-like>\n        <div class=\"fb-like\"\n          data-href=\"{{../../url}}\"\n          data-layout=\"standard\"\n          data-action=\"like\"\n          data-show-faces=\"false\">\n        </div>\n      </div>\n    {{/if}}\n  {{/each}}\n{{/unless}}\n"}
