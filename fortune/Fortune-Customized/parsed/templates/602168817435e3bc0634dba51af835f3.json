{"components/common/mailing-list":"<section class=\"mailing-list {{location}}\">\n  <h3 class=\"section-title\">{{lang 'footer.mailing_list'}}</h3>\n\n  <p>{{lang 'footer.mailing_list_blurb'}}</p>\n\n  <form\n    class=\"mailing-list-form\"\n    action=\"{{urls.subscribe.action}}\"\n    method=\"post\"\n    data-validates\n  >\n    <input type=\"hidden\" name=\"action\" value=\"subscribe\">\n    <input type=\"hidden\" name=\"check\" value=\"1\">\n    <input type=\"hidden\" name=\"nl_first_name\" value=\"bc\">\n\n    <div class=\"form-field full-width-field\">\n      <label class=\"form-label\" for=\"nl_email\">\n        <span class=\"form-label-text\">{{lang 'common.email_address'}}</span>\n        <input\n          class=\"form-input mailing-list-email\"\n          id=\"nl_email\"\n          name=\"nl_email\"\n          type=\"email\"\n          {{#if customer}}value=\"{{customer.email}}\"{{/if}}\n        >\n      </label>\n\n      <input\n        class=\"mailing-list-submit form-input\"\n        type=\"submit\"\n        name=\"subscribe\"\n        value=\"&#xe60a;\"\n      >\n    </div>\n  </form>\n\n  {{#if settings.show_newsletter_summary}}\n    <p class=\"newsletter-summary\">{{settings.newsletter_summary}}</p>\n  {{/if}}\n</section>\n"}
