{"components/cart/shipping-estimator":"{{#if shipping_cost}}\n  <div class=\"subtotal shipping-estimate-show\">\n   <a href=\"#\" class=\"shipping-estimate-value\">{{shipping_cost.formatted}}</a>\n  </div>\n{{else}}\n  <div class=\"cart-total-value\">\n    <button class=\"shipping-estimate-show\">{{lang 'cart.shipping_calculator.add_info'}}</button>\n    <button class=\"shipping-estimate-hide\">Cancel</button>\n  </div>\n{{/if}}\n\n<div class=\"shipping-estimator-form\">\n  <form method=\"post\">\n    <label class=\"form-label\">\n      {{lang 'cart.shipping_calculator.select_a_country'}}\n      <select class=\"form-select\" name=\"shipping-country\">\n        <option>{{lang 'cart.shipping_calculator.select_a_country'}}</option>\n        {{#each countries}}Ã¥\n          <option value=\"{{id}}\"{{#if selected}} selected{{/if}}>\n            {{name}}\n          </option>\n        {{/each}}\n      </select>\n    </label>\n\n    <label class=\"form-label\">\n      {{lang 'cart.shipping_calculator.select_a_state'}}\n      <select class=\"form-select\" name=\"shipping-state\">\n        <option>{{lang 'cart.shipping_calculator.select_a_state'}}</option>\n        {{#each states}}\n          <option value=\"{{id}}\"{{#if selected}} selected{{/if}}>\n            {{name}}\n          </option>\n        {{/each}}\n      </select>\n    </label>\n\n    <label class=\"form-label\">\n      {{lang 'cart.shipping_calculator.zip_postal_code'}}\n      <input class=\"form-input\" type=\"text\" name=\"shipping-zip\" value=\"{{selected_zip}}\" placeholder=\"{{lang 'cart.shipping_calculator.zip_postal_code'}}\">\n    </label>\n\n    <button class=\"button button-primary button-small shipping-estimate-submit\">{{lang 'cart.shipping_calculator.estimate_shipping'}}</button>\n  </form>\n\n  <div class=\"shipping-quotes\"></div>\n</div>\n"}
