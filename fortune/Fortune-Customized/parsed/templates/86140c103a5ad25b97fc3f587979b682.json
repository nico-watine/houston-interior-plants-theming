{"components/common/sort":"<form method=\"get\" data-sort-by>\n  <div class=\"form-field form-field-product-sort form-field-select\">\n    <label class=\"form-label\">\n      <span class=\"form-field-title\">\n        {{lang 'sorter.sort_by'}}\n      </span>\n      <span class=\"form-field-control\">\n        <span class=\"form-select-wrapper\">\n          <select class=\"form-input form-select\" name=\"sort\">\n            {{#if result_count}}\n              <option value=\"featured\" {{#if pagination.sort '===' 'relevance'}}checked{{/if}}>\n                {{lang 'sorter.relevance'}}\n              </option>\n            {{/if}}\n            <option value=\"featured\" {{#if pagination.sort '===' 'featured'}}selected{{/if}}>{{lang 'sorter.featured'}}</option>\n            <option value=\"newest\" {{#if pagination.sort '===' 'newest'}}selected{{/if}}>{{lang 'sorter.newest'}}</option>\n            <option value=\"bestselling\" {{#if pagination.sort '===' 'bestselling'}}selected{{/if}}>{{lang 'sorter.top_sellers'}}</option>\n            <option value=\"alphaasc\" {{#if pagination.sort '===' 'alphaasc'}}selected{{/if}}>{{lang 'sorter.alpha_asc'}}</option>\n            <option value=\"alphadesc\" {{#if pagination.sort '===' 'alphadesc'}}selected{{/if}}>{{lang 'sorter.alpha_desc'}}</option>\n            <option value=\"avgcustomerreview\" {{#if pagination.sort '===' 'avgcustomerreview'}}selected{{/if}}>{{lang 'sorter.reviews'}}</option>\n            <option value=\"priceasc\" {{#if pagination.sort '===' 'priceasc'}}selected{{/if}}>{{lang 'sorter.price_asc'}}</option>\n            <option value=\"pricedesc\" {{#if pagination.sort '===' 'pricedesc'}}selected{{/if}}>{{lang 'sorter.price_desc'}}</option>\n          </select>\n        </span>\n      </span>\n    </label>\n  </div>\n</form>\n"}
